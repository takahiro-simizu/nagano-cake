<div class="container">

  <div class="row">
    <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  </div>
  
  <div class="row">
    <div class="col-xs-12">
      <table class="table">
        <tbody>
        <%= form_with, model: @customer, local: true do |f| %>
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          
          <tr>
            <th>氏名</th>
            <td>
              <%= f.text_field :last_name %>
              <%= f.text_field :first_name %>
            </td>
          </tr>
          
          <tr>
            <th>フリガナ</th>
            <td>
              <%= f.text_field :kana_last_name %>
              <%= f.text_field :kana_first_name %>
            </td>
          </tr>
          
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :phone_number %></td>
          </tr>
          
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email %></td>
          </tr>
          
          <tr>
            <th>会員ステータス</th>
              <td>
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active, "有効", value: true %>
              </td>
              <td>
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active, "退会済み", value: false %>
              </td>
          </tr>
          
          <tr>
            <td>
              <%= f.submit "変更を保存", class: "btn btn-primary" %>
            </td>
          </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
  
</div>