<div class="container">
  <div class="row">
    <div class="page-header mt-5">
      <h4>注文履歴一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 table-responsive">
      <table class="table">
        <tr class="active">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>

        <% @order.each do |o| %>
          <tr>
            <td>
              <%= link_to o.created_at.strftime("%Y/%m/%d %H:%M:%S"), "/admin/orders/#{o.id}" %>
            </td>
            <td>
              <%= "#{o.customer.last_name} #{o.customer.first_name}" %>
            </td>
            <td>
              <%= o.order_items.sum(:amount) %>
            </td>
          </tr>
        <% end %>
      </table>
      <%= paginate @order %>
  </div>
</div>
