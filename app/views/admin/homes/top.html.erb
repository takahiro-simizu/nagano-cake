<div class="container">
  <div class="row">
    <div class="page-header mt-3">
      <h4>注文履歴一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 table-responsive">
      <table class="table">
        <tr class="table-active">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>

        <% @order.each do |order| %>
          <tr>
            <td>
              <%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), "/admin/orders/#{order.id}" %>
            </td>
            <td>
              <%= "#{order.customer.last_name} #{order.customer.first_name}" %>
            </td>
            <td>
              <%= order.order_items.map{ |item| item.amount }.sum %>
            </td>
          </tr>
        <% end %>
      </table>
      <%= paginate @order %>
  </div>
</div>
