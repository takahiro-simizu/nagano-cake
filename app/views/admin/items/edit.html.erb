<div class="container">
  <div class="row">
    <h4>商品編集</h4>
  </div>

  <div class="row">
    <%= form_with model: @item, url: admin_item_path, method: :patch, local: true do |f| %>
    <div class="col-xs-4">
      <%= attachment_image_tag @item, :image, :fill, 450, 300, format: 'jpg', fallback: "noimage.jpg", size: '250×250' %>
      <%= f.attachment_field :image %>
    </div>

    <div class="col-xs-8">
      <p>商品名 <%= f.text_field :name %></p>
      <p>商品説明 <%= f.text_area :introduction %></p>
      <p>税抜価格 <%= f.text_field :price %>円 </p>
      <p>販売ステータス
      <%= f.select :is_active, { "販売中": true, "販売停止中": false } %>
      </p>
      <%= f.submit "変更を保存", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>