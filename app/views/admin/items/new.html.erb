<div class="jambotron">
  <div class="container">

    <div class="row">
      <div class="col-xs-6 col-xs-offset-0">
        <h4>商品新規登録</h4>
      </div>
    </div>

      <%= form_with model: @item, local: true do |f| %>
      <div class="row">
        <div class="col-xs-8">
          <div class="img-fruid">
            <%= attachment_image_tag @item, :image, format: 'jpg', fallback: "noimage.jpg", size: '200x200' %>
              <%= f.attachment_field :image, placeholder: "商品画像" %>
          </div>
        </div>

        <div class="col-xs-4">
          <div class="form-group">
            <%= f.label :name, '商品名' %>
            <%= f.text_field :name %>
          </div>

          <div class="form-group">
            <%= f.label :introduction, '商品説明' %>
            <%= f.text_area :introduction %>
          </div>

          <div class="form-group">
            <%= f.label :price, '税抜価格' %>
            <%= f.text_field :price %>
          </div>

          <div class="form-group">
            <%= f.label :is_active, '販売ステータス' %>
            <%= f.select :is_active, { "販売中": true, "販売停止中": false } %>
          </div>

          <div class="action col-xs-4 col-xs-offset-8">
            <%= f.submit "新規登録", class: "btn btn-primary" %>
          </div>
          <% end %>
        </div>
      </div>
  </div>
</div>