<div class="container">
  <div class="row">
    <div class="col-5 mx-auto mt-5">
      <h3 class="rounded", style="background-color: silver">管理者ログイン</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mt-4">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'ml-4' %>
        </div>

        <div class="field mb-2">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'ml-5' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>
