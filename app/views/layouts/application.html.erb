<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header" class="navbar navbar-light bg-light">
      <div class="container">
        <nav class="nav navbar-light navbar-left">
          <% if request.url.include?('admin') %>
           <%= link_to "Nagano Cake", admin_path, class: "my-3" %>
          <% else %>
           <%= link_to "Nagano Cake", root_path, class: "my-3" %>
          <% end %>
        </nav><br>
        <nav class="clearfix">
          <ul class="nav nav-pills navbar-light navbar-right">
            <% if request.url.include?('admin') %>
              <% if admin_signed_in? %>
               <li>
                 <%= link_to "商品一覧", admin_items_path, style: "color:black;" %>
               </li>
               <li>
                 <%= link_to "会員一覧", admin_customers_path, style: "color:black;" %>
               </li>
               <li>
                 <%= link_to "注文履歴一覧", admin_path, style: "color:black;" %>
               </li>
               <li>
                 <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, style: "color:black;"%>
               </li>
              <% else %>
               <li>
                 <%= link_to "About", about_path, style: "color:black;", class: "mr-4" %>
               </li>
               <li>
                 <%= link_to "商品一覧", items_path, style: "color:black;", class: "mr-4" %>
               </li>
               <li>
                 <%= link_to "新規登録", new_customer_registration_path, style: "color:black;", class: "mr-4" %>
               </li>
               <li>
                 <%= link_to "ログイン", new_customer_session_path, style: "color:black;", class: "mr-4" %>
               </li>
              <% end %>
            <% elsif customer_signed_in? %>
              <li>
                ようこそ、<%= current_customer.first_name %>さん！
              </li>
              <li>
                <%= link_to "マイページ", customers_path, style: "color:black;" %>
              </li>
              <li>
                <%= link_to "商品一覧", items_path, style: "color:black;" %>
              </li>
              <li>
                <%= link_to "カート", cart_items_path, style: "color:black;" %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, style: "color:black;" %>
              </li>
            <% else %>
              <li>
                <%= link_to "About", about_path, style: "color:black;", class: "mr-4" %>
              </li>
              <li>
                <%= link_to "商品一覧", items_path, style: "color:black;", class: "mr-4" %>
              </li>
              <li>
                <%= link_to "新規登録", new_customer_registration_path, style: "color:black;", class: "mr-4" %>
              </li>
              <li>
                <%= link_to "ログイン", new_customer_session_path, style: "color:black;" %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
