<div class="container">

  <div class="row">
    <h4 class="my-4" style="background-color:#dcdcdc">マイページ</h4>
  </div>
  <div class="row">
      <h5 class="mr-3 ml-4"><strong>登録情報</strong></h5>
      <%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>
  </div>

  <div class="row my-4">
    <div class="col-8">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th style="background-color: #d3d3d3;">氏名</th>
            <td><%= "#{ @customer.last_name } #{ @customer.first_name }"%></td>
          </tr>
          <tr>
            <th style="background-color: #d3d3d3;">カナ</th>
            <td><%= "#{ @customer.last_name_kana } #{ @customer.first_name_kana }"%></td>
          </tr>
          <tr>
            <th style="background-color: #d3d3d3;">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th style="background-color: #d3d3d3;">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th style="background-color: #d3d3d3;">電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th style="background-color: #d3d3d3;">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <h5 class="mr-3 ml-4"><strong>注文履歴</strong></h5>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>

</div>