<div class="container">

  <div class="row d-flex">
    <h4 class="my-3 ml-2">商品一覧</h4>
    <P class="mt-4 ml-2">(全8件)</P>
  </div>

  <div class="row">
    <div class="col-xs-10 d-flex flex-wrap">
    <% @item.each do |item| %>
      <div class="mr-4">
        <%= link_to(item_path(item), class: 'list-content') do %>
          <%= attachment_image_tag item, :image, :fill, 260, 180, format: 'jpg' %><br>
        <% end %>
          <%= item.name %><br />
          ¥<%= item.price %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 ml-auto">
      <%= paginate @item %>
    </div>
  </div>

</div>