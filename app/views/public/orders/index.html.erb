<div class="container">

  <div class="row">
    <div class="page-header col">
      <h4 class="mt-5 mb-3">注文履歴一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr class="table-active">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>注文詳細</th>
          </tr>
        </thead>

        <tbody>
        <% @order.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <p>
                <%= order.postal_code %><br />
  							<%= order.address %><br />
  							<%= order.name %>
							</p>
						</td>
            <td>
              <% order.order_items.each do |oi| %>
								<%= oi.item.name %>
							<% end %>
						</td>
            <td><%= order.total_price %>円</td>
            <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary mt-4" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>