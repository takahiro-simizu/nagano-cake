<div class="container">
  <div class="row">
    <h4 class="mt-5 mb-3" style="background-color: silver">注文履歴詳細</h4>
  </div>

  <div class="row">
    <div class="col">
      <p><strong>注文情報</strong></p>

      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-active">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="table-active">配送先</th>
            <td>
              <p>
                <%= @order.postal_code %><br />
    						<%= @order.address %><br />
    						<%= @order.name %>
  						</p>
            </td>
          </tr>
          <tr>
            <th class="table-active">支払い方法</th>
            <td><%= @order.payments %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col">
      <p><strong>請求情報</strong></p>

      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-active">商品合計</th>
            <td><%= @order.total_price - @order.postage %>円</td>
          </tr>
          <tr>
            <th class="table-active">配送料</th>
            <td><%= @order.postage %>円</td>
          </tr>
          <tr>
            <th class="table-active"><strong>ご請求額</strong></th>
            <td><%= @order.total_price %>円</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p><strong>注文内容</strong></p>

      <table class="table table-bordered">
        <thead>
          <tr class="table-active">
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= (order_item.item.price * 1.1).floor %>円</td>
              <td><%= order_item.amount %></td>
              <td><%= (order_item.item.price * 1.1 * order_item.amount).floor %>円</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>