<div class="container">
  <div class="row">
    <h2 class="my-4", style="background-color:#dcdcdc;">新規会員登録</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <table class="table table-borderless">
        <tr>
          <th>名前</th>
          <td>
            (姓)<span class="title"><%= f.text_field :last_name, placeholder: "令和" %></span> (名)<span class="title"><%= f.text_field :first_name, placeholder: "道子" %></span>
          </td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td>(セイ)<%= f.text_field :last_name_kana, placeholder: "レイワ" %> (メイ)<%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td class="form"><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td class="form"><%= f.text_field :postal_code, placeholder: "0000000" %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td class="form"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 80%;" %></td>
        </tr>

        <tr>
          <th>電話番号(ハイフンなし)</th>
          <td class="form"><%= f.text_field :telephone_number, placeholder: "00000000000" %></td>
        </tr>

        <tr>
          <th>パスワード(6文字以上)</th>
          <td class="form">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>

        <tr>
          <th>パスワード(確認用)</th>
          <td class="form">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </tr>
    </table>
        <div class="row">
          <div class="col text-center">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </div>

  <% end %>

  <div class="row">
    <h4 style="background-color:#dcdcdc">既に登録済みの方</h4>
  </div>
  <div class="row">
    <p><%= link_to "こちら",new_customer_session_path %> からログインしてください。</p>
  </div>

</div>

<%= render "public/shared/links" %>
